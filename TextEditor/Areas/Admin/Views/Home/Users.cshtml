@model List<TextEditor.Areas.Admin.Models.UserViewModel>
<div class="container">
    <div class="row">
        <div class="col col-md-10 col-lg-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-lg-6">
                            <h3 class="panel-title">Quản lý user</h3>
                        </div>
                        <div class="col col-lg-6 text-right">
                            <a href="/Admin/Home/Create" class="btn btn-primary">Thêm mới</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered " align="center">
                        <thead>
                            <tr>
                                <th style="text-align:center"><em class="fa fa-cog"></em></th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td align="center">
                                       
                                        <a class=" btn btn-default" href="@Url.RouteUrl("EditUser", new { area="Admin", Controller = "Home", Action = "Edit",  id=@user.Id })"><em class="fa fa-pencil"></em></a>
                                        <a  class=" btn btn-danger" href="@Url.RouteUrl("DeleteUser", new { area="Admin", Controller = "Home", Action = "Del",  id=@user.Id })"><em class="fa fa-trash"></em></a>
                                        
                                    </td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Address</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">Page 1 of 5
                        </div>
                        <div class="col col-xs-8">
                           <ul class="pagination pull-right">
                               <li><a href="#">1</a></li>
                               <li><a href="#">2</a></li>
                               <li><a href="#">3</a></li>
                           </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

