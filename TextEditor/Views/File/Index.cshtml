@model TextEditor.Models.CrudFileTable

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">File</h3>
            </div>
            <div class="panel-body">
               @using (Html.BeginForm("index", "file", FormMethod.Post, new { enctype = "multipart/form-data" }))
               {
                @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="file" name="fileUpload" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.FileTableUpload.Name)
                        </div>
                        <div class="col-md-4">
                            <button id="btn_upload_file" class="btn btn-default" type="submit">Upload</button>
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Path
        </th>
        <th>
            Time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.FiletableView) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Path)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@section Scripts
{

}