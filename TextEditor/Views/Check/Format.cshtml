@model TextEditor.Models.FormatView

@{
    ViewBag.Title = "Format";
    string color = "black";
}

@if (!Model.isOk)
{
    <h1>Định dạng không khớp</h1>
    color = "red";
}
else
{
    <h1>Định dạng khớp</h1>
}

<h5 style="margin-top:30px;">Paper Type: @ViewBag.Paper - Width: @ViewBag.Width point - Height: @ViewBag.Height point</h5>
<div class="row" style="border:solid 1px @color; padding: 50px 0;">
    @Html.Raw(ViewBag.Html)
</div>


@section Scripts
{
    <script>

        $(document).ready(function () {

            @foreach(var e in ViewBag.Error)
            {
                @Html.Raw("ColorString(\"" + e+"\"); \n");
            }
        });

        function ColorString(str) {
            $("span:contains('" + str + "')").each(function () {
                $(this).html($(this).html().replace(
                    new RegExp(str, 'g'), '<span style="color:red;">' + str + '</span>'
                ));
            });
        }

    </script>
}